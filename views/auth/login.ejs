<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head.ejs', { pageName: "Login" } ) %>

  <body>
    <%-include ("../partials/nav.ejs")%>

    <section class="login-page">
        <h1 class="login-title">Login</h1>
        <form action="/login" method="POST" class="box">

          <div class="field">
            <label class="label">Email</label>
            <div class="control">
              <input
                name="email"
                class="input"
                type="email"
                placeholder="example@domain.com"
              />
            </div>
          </div>

          <div class="field">
            <label class="label">Password</label>
            <div class="control">
              <input
                name="password"
                class="input"
                type="password"
                placeholder="******"
              />
            </div>
          </div>

          <div class="field">
            <div class="control">
              <button class="login-submit">Submit</button>
            </div>
          </div>

        </form>
    </section>
  </body>
</html>